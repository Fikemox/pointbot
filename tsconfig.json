{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2015", "es5", "dom", "es2017"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "watch": false
  },
  "exclude": [
      "node_modules",
      "dist",
      "**/*.spec.ts"
  ]
}